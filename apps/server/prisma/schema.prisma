// This is your Prisma schema file,

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Category {
  id   String  @id @default(cuid())
  name String  @unique
  icon String?
  Room Room[]

  @@map("categories")
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  fullName String?
  age      Int?
  password String

  @@map("users")
}

model Room {
  id          String   @id @default(cuid())
  name        String
  price       Int
  location    String
  startDate   DateTime
  endDate     DateTime
  rate        Float
  images      String[]
  description String
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId])
  @@map("rooms")
}
